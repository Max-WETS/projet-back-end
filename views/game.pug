    input#clue(type='text' name='clue' value='' required='')
    label(for='nbr-words') Nbr_mots: 
    input#nbr-words(type='text' name='nbr-words' value='' required='')

div#guesser-display

div
    input#btn-plyr1(type='submit' value='Soumettre indice')

div
    input#btn-plyr2(type='submit' value='Valider tour')
div
    input#next-turn(type='submit' value='Tour suivant')

div
    input#quitgame(type='submit' value='Quitter la partie')

hr
div
  .remaining-indicator.blue-indicator
    | Joueur 1: 
    span#player1-span
    br
    | Mots bleus restants: 
    #blueRemaining
  .remaining-indicator.red-indicator
